{# templates/app/security/register.html.twig -- Display of Register Form #}

{% extends 'app/base.html.twig' %}

{% block mainClass %} class="col-lg-8" {% endblock %}

{% block body %}

<div id="register" class="mx-auto mt-5 pt-5 col-lg-8">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="mb-4">{{controller_name}}</h1>

    {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm) }}
        <button type="submit" class="btn btn-primary">{% trans %}S'inscrire {% endtrans %}</button>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}

{% block positionFooter %} position-absolute {% endblock %}

{% block sideCart %}
    {{ sessionCart.display() }}
{% endblock %}