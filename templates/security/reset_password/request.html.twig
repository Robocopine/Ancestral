{% extends 'security/base.html.twig' %}

{% block body %}
    <div class="m-3">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="h3 mb-4 font-weight-normal text-center">{% trans %}Réinitialiser mon mot de passe{% endtrans %}</h1>
        
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div class="mb-3">
                <small>
                    {% trans %}Entrez votre email et nous vous enverrons un lien 
                    par email pour réinitaliser votre mot de passe{% endtrans %}
                </small>
            </div>
            <button class="btn btn-primary">{% trans %}Réinitialiser{% endtrans %}</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
