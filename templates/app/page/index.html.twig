{# templates/app/page/index.html.twig -- Index of website #}

{% extends 'app/base.html.twig' %}

{% block title %} {{ controller_home|trans }} {% endblock %}

{% block body %}
<!-- Index Content -->

<!-- Carousel --> 
{#}
<div id="carouselExample" class="carousel slide mb-5">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <svg class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800" height="400" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: First slide" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#777"></rect><text x="50%" y="50%" fill="#555" dy=".3em">First slide</text></svg>
        </div>
        <div class="carousel-item">
            <svg class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800" height="400" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Second slide" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#666"></rect><text x="50%" y="50%" fill="#444" dy=".3em">Second slide</text></svg>
        </div>
        <div class="carousel-item">
            <svg class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800" height="400" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Third slide" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#555"></rect><text x="50%" y="50%" fill="#333" dy=".3em">Third slide</text></svg>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">{% trans %}Précédent{% endtrans %}</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">{% trans %}Suivant{% endtrans %}</span>
    </button>
</div> 
{#}
<h2 class="text-center my-5">{% trans %}Distillerie - Micro-brasserie{% endtrans %}</h2>
<div class="container mt-3 mb-5">
    <div class="row mx-lg-1">
        <div class="col-md-6 p-1"><img src="/src/edit/img/test.jpg" class="img-fluid rounded" alt=""/></div>
        <div class="col-md-6 p-1"><img src="/src/edit/img/test.jpg" class="img-fluid rounded" alt=""/></div>
        <div class="col-md-6 p-1"><img src="/src/edit/img/test.jpg" class="img-fluid rounded" alt=""/></div>
        <div class="col-md-6 p-1"><img src="/src/edit/img/test.jpg" class="img-fluid rounded" alt=""/></div>
    </div>
</div>

<!-- Limited Edition -->
{% if limitedProducts is not empty %}
    <h2 class="text-center mb-5">{% trans %}Éditions limitées{% endtrans %}</h2>
    <div class="container horizontal-scrollable mb-sm-3">
        <div class="row flex-sm-wrap flex-nowrap justify-content-sm-center text-center ">
            {% for product in limitedProducts %}
                {% include 'app/product/partials/_display.html.twig' with {'product' : product } %}
            {% endfor %}
        </div>
    </div>
{% endif %}

<!-- Limited Edition -->
{% if lastProducts is not empty %}
    <h2 class="text-center mb-5">{% trans %}Nouveautés{% endtrans %}</h2>
    <div class="container horizontal-scrollable">
        <div class="row flex-sm-wrap flex-nowrap justify-content-sm-center">
            {% for product in lastProducts %}
                {% include 'app/product/partials/_display.html.twig' with {'product' : product} %}
            {% endfor %}
        </div>
    </div>
{% endif %}

{% endblock %}

{% set positionFooter = "position-relative" %}