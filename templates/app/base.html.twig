{# templates/app/base.html.twig -- base of app template  #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Ancestral - {% block title %}{{ controller_name|trans }}{% endblock %}</title>
        <!-- Favicon-->
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {{ include("app/partials/_navtop.html.twig") }}
        {% if app.user is null %}
            {{ include("app/partials/_loginForm.html.twig") }}
        {% endif %}
        {{ include("app/partials/_header.html.twig") }}
        <div class="container-fluid">
            <div class="row">
                {% block sideMenu %}{{ include("app/partials/_sidemenu.html.twig") }}{% endblock %}
                <main {% block mainClass %}class="col-lg-8 mt-5 pb-5"{% endblock %}>{% block body %}{% endblock %}</main>
                {% block sideCart %}{% endblock %}
            </div>
        </div>
        <footer class="py-5 mt-5 bg-dark bottom-0 {% block positionFooter %} position-relative {% endblock %}">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
    </body>
</html>
