{# templates/app/base.html.twig -- base of app template  #}

<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Ancestral - {% block title %}{{ controller_name|trans }}{% endblock %}</title>
        <!-- Favicon-->
        <link rel="icon" href="{{ asset('./src/edit/img/' ~ items['icon']) }}">        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="container-fluid position-relative p-0 m-0">
        {{ include("app/partials/_navtop.html.twig") }}
        {{ include("app/partials/_header.html.twig") }}
        {% if app.user is null %}
            {{ include("app/partials/_loginForm.html.twig") }}
        {% endif %}
        
        <div class="container-fluid">
            <div class="row justify-content-md-center">
                {% block sideMenu %}
                    {{ include("app/partials/_sidemenu.html.twig") }}
                {% endblock %}
                <main {% block mainClass %}class="col-lg-8 px-0 pb-5"{% endblock %}>{% block body %}{% endblock %}</main>
            </div>
        </div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2537.2761680831986!2d3.565140077134454!3d50.51042808304275!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c2e546846d553b%3A0x3f6ff020a7d6cbb4!2zTOKAmUFuY2VzdHJhbA!5e0!3m2!1sfr!2sbe!4v1696600250653!5m2!1sfr!2sbe" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" class="border border-top"></iframe>

        {{ include("app/partials/_footer.html.twig") }}
         {{ include("app/partials/_legalAge.html.twig") }}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
