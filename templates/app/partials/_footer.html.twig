{# templates/app/partials/_footer.html.twig -- Footer + button action in foot (fixed) #}

<!-- Footer -->
<footer class="py-5 bg-dark bottom-0 mt-0 {% if positionFooter is defined %}{{positionFooter}}{% endif %}">
    <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Ancestral 2023</p></div>
</footer>
<!-- Actions Icons -->
<div id="icons-bottom" class="col-12 position-fixed z-3 float-end ">   
    <!-- Icon Conversation -->
    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4 d-block">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle a text-dark float-end border border-dark rounded-circle border-5 p-2 bg-light" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-regular fa-comments " ></i></a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li class="m-5">Conversation</li>
            </ul>
        </li>
    </ul>
    <pre class="float-end"> </pre>
    {% if app.request.attributes.get('_route') is not same as 'cart_index' and 'order_index' and 'order_resume' and 'order_validate' and 'order_cancel' %}
        <!-- Icon cartMobile -->
        <a href="" data-bs-toggle="modal" data-bs-target="#sideCartMobile" class="text-dark float-end text-dark float-end border border-dark rounded-circle border-5 p-2 bg-light position-relative" width="40px" height="40px">
            <span class="rounded-circle ">
                <i class="fa-solid fa-basket-shopping"></i>
            </span>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">
                {% if app.session.get('cart') %}
                    {% set cart  = app.session.get('cart') %}
                    {% set total = null %}
                    {% for product in cart %}
                        {% set total =+ product %}
                    {% endfor %}
                    {{ total }}
                {% else %}
                    0
                {% endif %}
                <span class="visually-hidden">{% trans %}Nombres d'articles{% endtrans %}</span>
            </span>
        </a>
        <pre class="float-end"> </pre>
    {% endif %}
    <!-- Icon Page Up -->
    <a href="#top" class="text-dark float-end text-dark float-end border border-dark rounded-circle border-5 p-2 bg-light" width="40px" height="40px">
        <span class="rounded-circle ">
            <i class="fa-solid fa-arrow-up "></i>
        </span>
    </a>
</div>

